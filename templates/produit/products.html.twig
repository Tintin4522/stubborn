{# templates/shop/products.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block title %}Tous les Produits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <form method="get" action="{{ path('shop_products') }}" class="mb-4">
            <div class="form-group">
                <label for="priceRange">Filtrer par tranche de prix :</label>
                <select name="priceRange" id="priceRange" class="form-control">
                    <option value="">Sélectionnez une tranche</option>
                    <option value="10-30">10 à 30 €</option>
                    <option value="30-35">30 à 35 €</option>
                    <option value="35-50">35 à 50 €</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Filtrer</button>
        </form>
        {% if Products is not empty %}
            <h2 class="text-center">Produits disponibles</h2>
            <div class="row">
                {% for product in Products %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="text-center mb-3">
                                    <div class="product-image">
                                        {% if product.imageFilename %}
                                            <img src="{{ asset('images-produits/' ~ product.imageFilename) }}" alt="{{ product.name }}" class="img-fluid">
                                        {% else %}
                                            <p>Aucune image disponible</p>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="product-name">{{ product.name }}</h5>
                                        <p class="product-price">{{ product.price }} €</p>
                                    </div>
                                    {% if app.user %} 
                                        <a href="{{ path('product_show', { id: product.id }) }}" class="btn btn-primary">Voir</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>Aucun produit disponible.</p>
        {% endif %}
    </div>
{% endblock %}
