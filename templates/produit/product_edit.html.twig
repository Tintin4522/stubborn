{% extends 'base.html.twig' %}

{% block body %}
    <div class="product-edit-form">
        <h2>Modifier le Produit : {{ product.name }}</h2>
        {# Remplacez cette ligne par la suivante #}
        {{ form_start(form, {'attr': {'action': path('product_update', { id: product.id }), 'method': 'POST'}}) }}
        <div class="product-fields">
            <div>
                {{ form_row(form.image, { 'attr': { 'onchange': 'previewImage(event)' } }) }}
                <div id="image-preview" style="width: 200px; height: 200px; border: 1px solid #ccc;">
                    {% if product.imageFilename %}
                        <img src="{{ asset('images-produits/' ~ product.imageFilename) }}" alt="{{ product.name }}" style="width: 100%; height: auto;">
                    {% else %}
                        <p>Aucune image disponible</p>
                    {% endif %}
                </div>
            </div>
            {{ form_row(form.name) }}
            {{ form_row(form.price) }}
            {% for stockForm in form.stocks %}
                <div class="stock-field">
                    {{ form_row(stockForm.size) }} 
                    {{ form_row(stockForm.quantity) }} 
                </div>
            {% endfor %}
            {{ form_row(form.isFeatured) }} {# Case Ã  cocher pour la mise en avant #}
        </div>
        <button type="submit">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
