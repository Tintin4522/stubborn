{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="login-container">
    <p class="h3 mb-3 font-weight-normal text-center">Se connecter</p>
    <hr class="separator">

    <form method="post" class="login-form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <div class="form-group">
            <label for="inputEmail">Nom utilisateur :</label>
            <input type="text" name="username" id="inputUsername" class="form-control" required autofocus>
        </div>

        <div class="form-group">
            <label for="inputPassword">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary btn-login" type="submit">
            Se connecter
        </button>
        <hr class="separator">

        <div class="mt-3 text-center">
            <p>Pas encore inscrit ?</p>
            <button><a href="{{ path('app_register') }}" class="btn btn-lg btn-primary">Créer un compte</a></button> 
        </div>
    </form>
</div>
{% endblock %}
